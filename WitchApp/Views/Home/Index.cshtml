@model WitchApp.Models.CalculationResult

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Witch Villager Killer</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/css/bootstrap.min.css" />
</head>
<body>
    <div class="container mt-4">
        <h1>Witch Villager Killer</h1>
        <form asp-action="CalculateAverageKills" method="post">
            <div class="mb-3">
                <label for="personA_age" class="form-label">Person A - Age of Death</label>
                <input type="number" class="form-control" id="personA_age" name="personA_age" required />
            </div>
            <div class="mb-3">
                <label for="personA_deathYear" class="form-label">Person A - Year of Death</label>
                <input type="number" class="form-control" id="personA_deathYear" name="personA_deathYear" required />
            </div>
            <div class="mb-3">
                <label for="personB_age" class="form-label">Person B - Age of Death</label>
                <input type="number" class="form-control" id="personB_age" name="personB_age" required />
            </div>
            <div class="mb-3">
                <label for="personB_deathYear" class="form-label">Person B - Year of Death</label>
                <input type="number" class="form-control" id="personB_deathYear" name="personB_deathYear" required />
            </div>
            <button type="submit" class="btn btn-primary">Calculate Average</button>
        </form>

        @if (Model != null)
        {
            @if (Model.AverageKills != -1)
            {
                <div class="mt-4">
                    <h2>Average Number of Villagers Killed : @Model.AverageKills</h2>
                </div>
            }
            else
            {
                <div class="mt-4 text-danger">
                    <h2>Invalid input. Please check the age and year values. Result : @Model.AverageKills</h2>
                </div>
            }
        }
    </div>
</body>
</html>
